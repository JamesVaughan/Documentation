{
	
	"template": ["default", "templates/tmg"],
	"build": {
		
		"template": ["default", "templates/tmg"],
		"dest": "_site",
		"globalMetadata": {
			"_appTitle": "Travel Modelling Group Documentation",
			"_gitContribute": {
				"repo": "https://github.com/TravelModellingGroup",
				"branch": "dev",
				"apiSpecFolder": "docs-ref-overwrite"
			},
			"_appLogoPath":"images/tmg.png",
			"_appFooter": "Â©2018, Travel Modelling Group"
		},
		"content": [
			{
				"files": [
					"index.md",
					"toc.yml",
					"xtmf/**.md",
					"xtmf/toc.yml",
					"api/**.yml",
					"api/**.md",
					"modules/**.json",
					"modules/**.yml",
					"modules/**.md"
				]
			}
		],
		"resource": [
			{
				"files": ["images/**", "**/images/**"]
			}
		]
	},
	"metadata": [
		{
			"src": [
				{
					"src": "../../XTMF/Code/",
					"files": ["**.csproj"],
					"exclude": ["**/bin/**", "**/obj/**", "_site/**"]
				}
			],
			"dest": "api",
			"_appLogoPath": "images/tmg.png"
		}
	]
}
